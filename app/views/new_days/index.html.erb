<h1>Listing new_days</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_days.each do |new_day| %>
      <tr>
        <td><%= new_day.comment %></td>
        <td><%= new_day.date %></td>
        <td><%= link_to 'Show', new_day %></td>
        <td><%= link_to 'Edit', edit_new_day_path(new_day) %></td>
        <td><%= link_to 'Destroy', new_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 <%=link_to '开启新的一天吧', new_new_day_path, class: 'btn btn-lg btn-default'%>
