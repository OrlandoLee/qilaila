
<div class="container marketing"> 
<hr class="featurette-divider">
<p id="notice"><%= notice %></p>


      <div class="row featurette">
        <div class="col-md-7">
          <h2 class="featurette-heading"><%= @new_day.date %> </h2>
		<h4><span class="text-muted"> <%= @new_day.breakfast.explanation.present? ? "早餐：#{@new_day.breakfast.explanation}。" : '' %></span></h4>
		<h4><span class="text-muted"><%= @new_day.lunch.explanation.present? ? "午餐：#{@new_day.lunch.explanation}。" : '' %></span></h4>
		<h4><span class="text-muted"><%= @new_day.dinner.explanation.present? ? "晚餐：#{@new_day.dinner.explanation}。" : '' %></span></h4>
		<h4><span class="text-muted"><%= @new_day.exercise.explanation.present? ? "运动情况：#{@new_day.exercise.explanation}。" : '' %></span></h4>
		<h4><span class="text-muted"><%= @new_day.snacks.first.explanation.present? ? "加餐：#{@new_day.snacks.first.explanation}。" : '' %></span></h4>
		<h4><span class="text-muted"><%= @new_day.question.present? ? "用户提问：#{@new_day.question}。" : '' %></span></h4>
		<% if @new_day.comment.present? %>
		  <h2 class="featurette-heading">营养师反馈 </h2>
          <h3 class="lead"><%= @new_day.comment %></h3>
		<% end %>
        </div>
        <div class="col-md-2">
		<br> 
		  <% @new_day.breakfast.breakfast_images.each do |breakfast_image| %>
			<%= image_tag(breakfast_image.image.url, class: 'featurette-image img-responsive center-block') %>
		  <% end %>
		<br> 
		  <% @new_day.lunch.lunch_images.each do |lunch_image| %>
			<%= image_tag(lunch_image.image.url, class: 'featurette-image img-responsive center-block') %>
		  <% end %>
			<br>
		  <% @new_day.dinner.dinner_images.each do |dinner_image| %>
			<%= image_tag(dinner_image.image.url, class: 'featurette-image img-responsive center-block') %>
		  <% end %>
		</div>
		<div class="col-md-3">
				<br> 
			<% @new_day.snacks.first.snack_images.each do |snack_image| %>
			<%= image_tag(snack_image.image.url, class: 'featurette-image img-responsive center-block') %>
		  <% end %>
			<br> 
		  <% @new_day.exercise.exercise_images.each do |exercise_image| %>
			<%= image_tag(exercise_image.image.url, class: 'featurette-image img-responsive center-block') %>
		  <% end %>
        </div>
      </div>
      </div>

<% if !@new_day.present? || !@new_day.comment.present? %>
	<% if current_user.nutri? %>
	<%= simple_form_for(@new_day) do |f| %>
	  <%= f.error_notification %>
	  <div class="form-inputs">
	    <%= f.input :comment, label: '营养师反馈'  %>
	  </div>
	  <div class="form-actions">
	    <%= f.button :submit, '提交' %>
	  </div>
		<% end %>
	<% end %>
<% end %>

